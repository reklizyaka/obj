{
  "name": "hillel-home-work",
  "version": "1.0.0",
  "description": "Make your code great again",
  "main": "",
  "scripts": {
    "lint": "eslint ./",
    "prettier": "prettier --write src/*.js",
    "test": "jest"
  },
  "author": "Koterniak Serghii",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
